{
    "name": "vscode-rufo",
    "displayName": "Rufo - Ruby formatter",
    "description": "VS Code plugin for ruby-formatter/rufo",
    "version": "0.0.1",
    "publisher": "jnbt",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:ruby"
    ],
    "preview": true,
    "contributes": {
        "configuration": {
            "title": "Rufo",
            "properties": {
                "rufo.exe": {
                    "type": "string",
                    "default": "rufo",
                    "description": "Path to invoke rufo"
                },
                "rufo.useBundler": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether Rufo should be started via Bundler"
                }
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
